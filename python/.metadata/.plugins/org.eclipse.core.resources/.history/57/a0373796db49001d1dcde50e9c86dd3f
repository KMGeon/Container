<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Insert title here</title>
  </head>
  <body>
    <input type="text" id="flag" value="200" />
    <input type="button" value="plus_3" onclick="myclick()" />

    <script>
      function myclick() {
        var obj = document.querySelector("#flag");
        var a = obj.value;
        var aa = parseInt(a);
        aa += 3;
        obj.value = aa;
      }
    </script>
  </body>
</html>
